<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body class="account-body">



  <h2 class="account-name"> <%= session[:user].name.capitalize %></h2>



  <div class="container">
    <% if session[:user] == nil %>
    <p>no one is logged in </p>
    <% end %>




    <%= erb :post %>

  </div>



  <div class="container faux-danger">

    <a id="fake-button" class="btn btn-danger" href="#">Cancel</a>

  </div>





  <div id="modal" class="container real-danger">

   <span id="exit" class="close">&times</span>
   <div class="container danger">
    <a id="real-button" class="btn btn-danger" href="/delete">Delete account</a>
  </div>
</div>



<h1 class="account-posts">My Posts</h1>
<div class="container">
  <div class="row">
      <% @user_post.each do |post| %>
    <div class="col-md-4 col-sm-6">
      <img class="image-posts" src="<%= post.image %>" alt="">
      <div class="container">
      <h3><%= post.title %></h3>
      <h6><%= post.content %></h6>

    </div>
    </div>
      <% end %>
  </div>
</div>






</body>
</html>
