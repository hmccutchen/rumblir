





<div class="container title">
  <h1> What's new</h1>
  <% if session[:user] == nil %>
  <h3 class="log-error"> Must be <a href="/login">logged</a> in!</h3>
  <% else %>
</div>
<div class="container">
  <% @posts.reverse.each do |post|  %>
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <div class="content">
        <h3><a href="/post/<%=post.id%>"><%= post.title %></a></h3>
        <p><%= post.content %></p>
        <%=post.user_id  %>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
